                        <th>
                            @Html.DisplayNameFor(model => model.Valorestado)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Anio)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th></th>
                    </tr>
                </thead>*@
                <tbody>
