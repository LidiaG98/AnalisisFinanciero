                            </td>
                            @*<td>
                                <a asp-action="Edit" asp-route-id="@item.Idvalore">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.Idvalore">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.Idvalore">Delete</a>
