            <div class="form-group">
                <label asp-for="mensajeMenorBase" class="control-label"></label>
                <input asp-for="mensajeMenorBase" class="form-control" />
                <span asp-validation-for="mensajeMenorBase" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mensajeMayorEmp" class="control-label"></label>
                <input asp-for="mensajeMayorEmp" class="form-control" />
                <span asp-validation-for="mensajeMayorEmp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="mensajeMenorEmp" class="control-label"></label>
                <input asp-for="mensajeMenorEmp" class="form-control" />
                <span asp-validation-for="mensajeMenorEmp" class="text-danger"></span>
