@model IEnumerable<Sistema_de_Informes_de_Analisis_Financieros.Models.Empresa>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    
        @if (User.IsInRole("Administrator"))
        {
            <h1>Empresas</h1>
        }
        else
        {               
            <h1>Tu Empresa</h1>
        }    

<p>
    @if (User.IsInRole("Administrator"))
    {
        <a asp-action="Create" class="btn btn-primary">Crear Nueva Empresa</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nomempresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descempresa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Razonsocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdsectorNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nomempresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descempresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Razonsocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdsectorNavigation.Nomsector)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idempresa" class="btn btn-info">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Idempresa" class="btn btn-warning">Detalles</a> |
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Idempresa" class="btn btn-danger">Eliminar</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
